<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/colorYellowLight"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/component_info_view"
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:background="@color/colorGreenLight"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/component_info_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/info_with_transition_title"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/component_info_view"/>

    <TextView
        android:id="@+id/component_info_tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:text="@string/info_with_transition_description"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/component_info_tv_title"
        app:layout_constraintLeft_toRightOf="@id/component_info_view"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>